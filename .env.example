# SME Financial Health Assessment Platform - Environment Configuration
# Copy this file to .env and fill in your values

# ============= Database =============
POSTGRES_DB=sme_finance
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here

# Full database URL for backend
DATABASE_URL=postgresql+asyncpg://postgres:your_secure_password_here@localhost:5432/sme_finance

# ============= Security =============
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-min-32-characters-long

# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=your-fernet-encryption-key

# ============= LLM API Keys (Optional) =============
# At least one is recommended for AI features
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# ============= Redis =============
REDIS_URL=redis://localhost:6379

# ============= CORS =============
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost,http://localhost:3000,http://localhost:5173

# ============= Environment =============
DEBUG=false

# ============= File Upload =============
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=10485760  # 10MB

# ============= Frontend =============
VITE_API_URL=http://localhost:8000
